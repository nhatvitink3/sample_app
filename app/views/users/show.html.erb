<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p><strong><%= t(".created_at") %>:</strong> <%= l(@user.created_at, format: :long) %></p>
      <p><strong><%= t(".updated_at") %>:</strong> <%= l(@user.updated_at, format: :long) %></p>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @microposts.any? %>
      <h3><%= t(".microposts_heading", count: @microposts.count) %></h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%== pagy_bootstrap_nav(@page) %>
    <% end %>
  </div>
</div>
