<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("sampleapp"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.title"), root_path %></li>
        <li><%= link_to t("static_pages.help.title"), help_path %></li>
        <li><%= link_to t("static_pages.contact.title"), contact_path %></li>
        <li><%= link_to t("static_pages.about.title"), about_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("drop_down_account.users"), "#" %></li>
          <li class="dropdown">
            <%= link_to "#", id: "account", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= t("drop_down_account.account") %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu" id="dropdown-menu">
              <li><%= link_to t("drop_down_account.profile"), current_user %></li>
              <li><%= link_to t("drop_down_account.settings"), '#' %></li>
              <li class="divider"></li>
              <li> <%= link_to t("drop_down_account.log_out"), logout_path, data: {turbo_method: :delete} %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("static_pages.login"), login_path %></li>
        <% end %>
      </ul>
      <%= link_to t("lang_en"), locale: :en %>
      <%= link_to t("lang_vi"), locale: :vi %>
    </nav>
  </div>
</header>
